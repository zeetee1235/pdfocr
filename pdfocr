#!/usr/bin/env python3
"""
PDFOCR - PDF to Text Extraction CLI Tool
어디서든 사용 가능한 CLI 도구
"""
import runpy
from pathlib import Path


if __name__ == "__main__":
    repo_root = Path(__file__).resolve().parent
    src_dir = repo_root / "src"
    # 실행 시 import 경로를 패키지 루트로 맞추고 CLI 엔트리 실행
    runpy.run_path(str(src_dir / "pdfocr" / "main.py"), run_name="__main__")
