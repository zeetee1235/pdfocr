#!/usr/bin/env python3
"""
PDFOCR - PDF to Text Extraction CLI Tool
"""
import sys
from pathlib import Path


def main():
    """Entry point for pdfocr CLI."""
    repo_root = Path(__file__).resolve().parent
    src_dir = repo_root / "src"
    
    if src_dir.exists():
        sys.path.insert(0, str(src_dir))
    
    from pdfocr.main import main as pdfocr_main
    pdfocr_main()


if __name__ == "__main__":
    main()
